// Example integration: How to use all components together in a static service page
// File: app/services/exterior-wash/page.tsx

import type { Metadata } from 'next';
import { generateServiceMetadata } from '@/src/lib/seo/localSEO';
import { getSanAntonioServiceDescriptions } from '@/src/lib/seo/sanAntonioContent';
import { getServiceSchema, getFAQSchema, getBreadcrumbSchema } from '@/src/lib/seo/sanAntonioSchema';
import ServiceTemplate from '@/src/components/service/ServiceTemplate';
import { ServiceAvailabilityIndicator, RelatedServicesWidget, ServiceSuggestions } from '@/src/components/navigation/ServiceNavigation';
import HeroSection from '@/src/components/service/HeroSection';
import WhatsIncluded from '@/src/components/service/WhatsIncluded';
import WhyChoose from '@/src/components/service/WhyChoose';
import Process from '@/src/components/service/Process';
import FAQAccordion from '@/src/components/service/FAQAccordion';
import FinalCTA from '@/src/components/service/FinalCTA';
import ServiceAreas from '@/src/components/service/ServiceAreas';
import LocalBenefits from '@/src/components/service/LocalBenefits';
import ServiceGallery from '@/src/components/service/ServiceGallery';
import BeforeAfterShowcase from '@/src/components/service/BeforeAfterShowcase';
import { services } from '@/src/lib/data';

// Static service data (no dynamic routing needed)
const exteriorWashService = services.find(s => s.slug === 'exterior-hand-wash');
if (!exteriorWashService) {
  throw new Error('Exterior wash service not found');
}

// SEO Metadata Generation (RSC)
export const metadata: Metadata = generateServiceMetadata(exteriorWashService);

// Service-specific schema markup
const serviceSchema = getServiceSchema(exteriorWashService);
const faqSchema = getFAQSchema(exteriorWashService.faqs);
const breadcrumbSchema = getBreadcrumbSchema([
  { name: 'Home', url: 'https://odaat1.com/' },
  { name: 'Services', url: 'https://odaat1.com/services' },
  { name: 'Exterior Hand Wash', url: 'https://odaat1.com/services/exterior-wash' },
  { name: 'San Antonio, TX', url: 'https://odaat1.com/services#san-antonio-coverage' }
]);

// Local content injection
const localContent = getSanAntonioServiceDescriptions(exteriorWashService.slug);

export default function ExteriorWashPage() {
  return (
    <>
      {/* Enhanced Schema Markup */}
      <script
        type="application/ld+json"
        dangerouslySetInnerHTML={{ __html: JSON.stringify(serviceSchema) }}
      />
      <script
        type="application/ld+json"
        dangerouslySetInnerHTML={{ __html: JSON.stringify(faqSchema) }}
      />
      <script
        type="application/ld+json"
        dangerouslySetInnerHTML={{ __html: JSON.stringify(breadcrumbSchema) }}
      />

      {/* Service Template with Responsive Design */}
      <ServiceTemplate service={exteriorWashService} showLocalContent={true} priority="seo">
        {/* 1. Service Availability - San Antonio Coverage */}
        <ServiceAvailabilityIndicator />

        {/* 2. Hero Section with Enhanced SEO */}
        <HeroSection service={exteriorWashService} />

        {/* 3. Service Gallery with Progressive Loading */}
        <ServiceGallery service={exteriorWashService} />

        {/* 4. Before/After Showcase */}
        <BeforeAfterShowcase service={exteriorWashService} />

        {/* 5. What's Included Section */}
        <WhatsIncluded service={exteriorWashService} />

        {/* 6. Local Benefits - San Antonio Specific */}
        <LocalBenefits service={exteriorWashService} />

        {/* 7. Service Areas - Geographic Coverage */}
        <ServiceAreas service={exteriorWashService} />

        {/* 8. Why Choose This Service Section */}
        <WhyChoose service={exteriorWashService} />

        {/* 9. Process Section */}
        <Process service={exteriorWashService} />

        {/* 10. FAQ Accordion with Local FAQs */}
        <FAQAccordion service={exteriorWashService} />

        {/* 11. Final CTA Section */}
        <FinalCTA service={exteriorWashService} />

        {/* 12. Related Services Cross-linking */}
        <RelatedServicesWidget 
          currentServiceName={exteriorWashService.name}
          relatedServices={[
            {
              name: 'Ceramic Coating',
              description: 'Long-term paint protection with advanced ceramic technology',
              price: '$400+',
              duration: '4-6 hours',
              url: '/services/ceramic-coating'
            },
            {
              name: 'Paint Correction',
              description: 'Professional paint restoration and swirl removal',
              price: '$400+',
              duration: '6-8 hours',
              url: '/services/paint-correction'
            }
          ]}
        />

        {/* 13. Service Suggestions - Upgrade/Downgrade Paths */}
        <ServiceSuggestions 
          currentPrice={exteriorWashService.startingPrice}
          currentServiceName={exteriorWashService.name}
        />
      </ServiceTemplate>
    </>
  );
}